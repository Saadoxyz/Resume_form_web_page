@page "/cv"
@rendermode InteractiveServer

<head>
    <style>
        /* General Styling */
        body {
            background: linear-gradient(to right, #6e8efb, #a777e3);
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        .cv-container {
            width: 850px;
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.15);
            margin: auto;
            margin-top: 50px;
            transition: all 0.3s ease-in-out;
        }

            .cv-container:hover {
                box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
            }

        /* CV Header */
        .cv-header {
            text-align: center;
            padding-bottom: 20px;
            border-bottom: 3px solid #6e8efb;
        }

            .cv-header h2 {
                margin: 0;
                font-size: 28px;
                font-weight: 700;
                color: #2d2d2d;
            }

            .cv-header p {
                margin: 8px 0;
                font-size: 16px;
                color: #666;
                font-weight: 500;
            }

        /* CV Sections */
        .cv-content {
            padding-top: 20px;
        }

        .cv-section {
            margin-bottom: 25px;
            padding: 18px;
            background: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.08);
            transition: 0.3s ease-in-out;
        }

            .cv-section:hover {
                background: #f1f1f1;
            }

            .cv-section h3 {
                font-size: 22px;
                color: #444;
                border-bottom: 2px solid #6e8efb;
                padding-bottom: 6px;
                margin-bottom: 12px;
                font-weight: bold;
            }

            .cv-section p {
                font-size: 16px;
                line-height: 1.7;
                color: #555;
                font-weight: 400;
            }

        /* Photo Styling */
        .cv-photo {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            display: block;
            margin: 20px auto;
            border: 4px solid #6e8efb;
        }

        /* Animation */
        .cv-container, .cv-section {
            animation: fadeIn 0.6s ease-in-out;
        }
    </style>
</head>

<h3>CV Display</h3>

<div class="cv-container">
    <div class="cv-header">
        @if (!string.IsNullOrEmpty(Photo))
        {
            <img class="cv-photo" src="@Photo" alt="Profile Photo" />
        }
        <h2>@Name</h2>
        <p>@Email | @Phone | @Location</p>
    </div>
    <div class="cv-content">
        <div class="cv-section">
            <h3>About Me</h3>
            <p>@About</p>
        </div>

        <div class="cv-section">
            <h3>Education</h3>
            <p>@Education</p>
        </div>

        <div class="cv-section">
            <h3>Experience</h3>
            <p>@Experience</p>
        </div>

        <div class="cv-section">
            <h3>Skills</h3>
            <p>@Skills</p>
        </div>

        <div class="cv-section">
            <h3>Hobbies</h3>
            <p>@Hobbies</p>
        </div>

        <div class="cv-section">
            <h3>Achievements</h3>
            <p>@Achievements</p>
        </div>

        <div class="cv-section">
            <h3>Certificates</h3>
            <p>@Certificates</p>
        </div>
    </div>
</div>

@code {
    [Parameter][SupplyParameterFromQuery] public string? Name { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Email { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Phone { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Location { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? About { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Education { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Experience { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Skills { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Hobbies { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Achievements { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Certificates { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Photo { get; set; }
}
